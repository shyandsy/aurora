# ============================================
# Aurora Sample Project - Environment Configuration
# ============================================
# Copy this file to .env and update the values according to your environment

# ============================================
# Server Configuration (required)
# ============================================
# Server listen address
HOST=0.0.0.0

# Server listen port
PORT=8080

# Service name (used for API path prefix, e.g. /api/{SERVICE_NAME}/v1)
SERVICE_NAME=sample

# Service version
SERVICE_VERSION=1.0.0

# Run level: local, stage, production
# - local: development, debug mode
# - stage: staging
# - production: production, release mode
RUN_LEVEL=local

# HTTP server timeouts (optional, have defaults)
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=60s
SHUTDOWN_TIMEOUT=5s

# ============================================
# Database Configuration (required)
# ============================================
# Database driver: mysql or sqlite
DB_DRIVER=mysql

# Database connection string (DSN)
# MySQL: user:password@tcp(host:port)/dbname?charset=utf8mb4&parseTime=True&loc=Local
# SQLite: file:database.db?cache=shared&mode=rwc
DB_DSN=root:123456@tcp(localhost:3306)/sample_db?charset=utf8mb4&parseTime=True&loc=Local

# Connection pool
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=100

# ============================================
# Redis Configuration (required for JWT)
# ============================================
# Redis address (host:port)
REDIS_ADDR=localhost:6379

# Redis password (required; use "none" if Redis has no password)
REDIS_PASSWORD=123456

# Redis DB index (must be >= 0)
REDIS_DB=0

# ============================================
# JWT Configuration (required)
# ============================================
# JWT secret (required; change in production, do not use default)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT expiry (required; e.g. 24h, 720h)
# Examples: 24h (24 hours), 720h (30 days), 168h (7 days)
JWT_EXPIRE_TIME=24h

# JWT issuer
JWT_ISSUER=sample-service

# ============================================
# I18N Configuration (optional, have defaults)
# ============================================
# Default language
I18N_DEFAULT_LANG=en

# Supported languages (comma-separated)
I18N_SUPPORTED_LANGS=en,zh-CN,zh-TW

# Locale directory (relative to project root)
I18N_LOCALE_DIR=locales

# Load embedded locale files (optional)
# I18N_LOAD_EMBEDDED=true

# ============================================
# Mail Configuration (optional; omit if not using mail)
# ============================================
# SMTP host
# MAIL_SMTP_HOST=smtp.gmail.com

# SMTP port
# MAIL_SMTP_PORT=587

# Sender email
# MAIL_FROM_EMAIL=noreply@example.com

# Sender name
# MAIL_FROM_NAME=Sample Service

# SMTP username
# MAIL_SMTP_USER=your_email@gmail.com

# SMTP password (or app password)
# MAIL_SMTP_PASSWORD=your_app_password
